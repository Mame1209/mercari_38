.single-container
  %header.login-header
    %h1
      =link_to root_path, class: "mercari-home" do
        = image_tag "logo.svg", class: 'images', alt: "mercari"
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status-top
        %li
          電話番号認証
          .progress-status1
        %li.active
          住所入力
          .progress-status1
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.single-main
    .m-single-container
      .l-single-title 住所入力
      .address-form-inner
      %form{ action: "https://www.mercari.com/jp/login/", method: "POST", novalidate: "novalidate"}
        .s-single-container
          .form-group__input
            %label お名前
            %span 必須
            %input.input-default{ autocomplete: "off", name: "name", placeholder: "例）山田", type: "name"}
            %input.input-default{ autocomplete: "off", name: "name", placeholder: "例）彩", type: "name"}
          .form-group__input
            %label お名前カナ
            %span 必須
            %input.input-default{ autocomplete: "off", name: "name", placeholder: "例）ヤマダ", type: "name"}
            %input.input-default{ autocomplete: "off", name: "name", placeholder: "例）アヤ", type: "name"}
          .form-group__input
            %label 郵便番号
            %span 必須
            %input.input-default{ autocomplete: "off", name: "name", placeholder: "例）123-4567", type: "name"}
          .form-group__input
            %label 都道府県
            %span 必須
          .form-groups
            %select.input-state{name: "state"}
              %option{value: "1"} 北海道
              %option{value: "2"} 青森県
              %option{value: "3"} 岩手県

.single-container
  %header.login-header
    %h1
      =link_to root_path, class: "mercari-home" do
        = image_tag "logo.svg", class: 'images', alt: "mercari"
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status-top
        %li
          電話番号認証
          .progress-status1
        %li.active
          住所入力
          .progress-status1
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.single-main
    .m-single-container
      .l-single-title 住所入力
      .address-form-inner
      = form_for(@registration, url: wizard_path) do |f|
        .s-single-container
          .form-group__input
            = f.label :お名前
            %span 必須
            = f.text_field :last_name, autofocus: true, placeholder: "例）山田", class: "input-default"
            = f.text_field :first_name, placeholder: "例）彩", class: "input-default"
          .form-group__input
            %label お名前カナ
            %span 必須
            = f.text_field :last_name_kana, placeholder: "例）ヤマダ", class: "input-default"
            = f.text_field :first_name_kana, placeholder: "例）アヤ", class: "input-default"
          .form-group__input
            = f.label :郵便番号
            %span 必須
            = f.text_field :zipcode, placeholder: "例）123-4567", class: "input-default", maxlength: "7"
          .form-group__input
            = f.label :都道府県
            %span 必須
            = f.select :prefecture, User.prefectures.keys.to_a, {prompt: '-'}, {class: "input-defaults"}
          .form-group__input
            = f.label :市区町村
            %span 必須
            = f.text_field :city, placeholder: "例）横浜市緑区", class: "input-default"
          .form-group__input
            = f.label :番地
            %span 必須
            = f.text_field :address_1, placeholder: "例）青山1−1−1", class: "input-default"
          .form-group__input
            = f.label :建物名
            %span.option 任意
            = f.text_field :address_2, placeholder: "例）柳ビル103", class: "input-default"
          .form-group__input
            = f.label :電話番号
            %span.option 任意
            = f.phone_field :phone_number, placeholder: "例）09012345678", class: "input-default", maxlength: "11"
          .form-group__input
            = f.submit "次へ進む", class: "next-submit btn-default"
            / # = link_to "次へ進む", new_user_card_path, class: "next-submit btn-default"
= render 'shared/login_footer'